  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "attach",
      "name": "Attach",
      "port": 5858
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Watch",
      "runtimeExecutable": "nodemon",
      "program": "${workspaceFolder}/index",
      "restart": true,
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "port": 5858,
      "runtimeArgs": [
        "--nolazy"
      ],
      "env": {
        "NODE_ENV": "development"
      },
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Start",
      "program": "${workspaceFolder}/index",
      "console": "integratedTerminal"
    }
  ]
}
