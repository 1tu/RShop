v-container(text-xs-center)
  v-layout(row wrap)
    v-flex.mb-3(xs12)
      h2 Rejection {{ model.id? 'edit' : 'create' }}
    v-flex(xs12)
      v-form(@submit.prevent='submit')
        template(v-if='model')
          v-select(label='Причина' v-model='model.reason' :items='reasonList' item-text='name' item-value='id'
            name='reason' v-validate='"required"' :error-messages='errors.collect("reason")')

          v-text-field(label='Описание' v-model='model.description' multi-line rows='2' auto-grow)

          v-btn(type='submit') submit
          v-btn( @click='clear') clear
