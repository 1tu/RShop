v-container(text-xs-center)
  v-layout(row wrap)
    v-flex.mb-3(xs12)
      h2 Shop {{ model.id? 'edit' : 'create' }}
    v-flex(xs12)
      v-form(@submit.prevent='submit')
        template(v-if='model')
          v-text-field(label='Название' v-model='model.name' name='name'
            v-validate='"required|max:80"' :error-messages='errors.collect("name")')
          v-text-field(label='Домен' v-model='model.domain' name='domain'
            v-validate='"required|max:20"' :error-messages='errors.collect("domain")')
          v-text-field(label='Порт' v-model='model.port' name='port'
            v-validate='"required|numeric"' :error-messages='errors.collect("port")')
          v-select(label='Города' v-model='model.cityList' name='cityList' multiple autocomplete chips
            :items='cityList' item-text='name' item-value='id' return-object)

          v-btn(type='submit') submit
          v-btn( @click='clear') clear
