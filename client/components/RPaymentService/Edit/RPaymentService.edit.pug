v-container(text-xs-center)
  v-layout(row wrap)
    v-flex.mb-3(xs12)
      h2 PaymentService {{ model.id? 'edit' : 'create' }}
    v-flex(xs12)
      v-form(@submit.prevent='submit')
        template(v-if='model')
          v-text-field(label='Название' v-model='model.name'
            name='name' v-validate='"required|max:100"' :error-messages='errors.collect("name")')

          v-text-field(label='Комиссия' v-model='model.tax' type='number'
            name='tax' v-validate='"required"' :error-messages='errors.collect("tax")')

          v-select(label='Тип комиссии' v-model='model.taxType' :items='taxTypeList' item-text='name' item-value='id'
            name='taxType' v-validate='"required"' :error-messages='errors.collect("taxType")')

          v-select(label='Сервис доставки' v-model='model.deliveryService' autocomplete
            :items='deliveryServiceList' item-text='name' item-value='id' return-object)

          v-btn(type='submit') submit
          v-btn( @click='clear') clear
